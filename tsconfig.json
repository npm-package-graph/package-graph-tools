{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "target": "ES2020",
    "module": "ESNext",
    "sourceMap": false,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": false,
    "noEmit": false, // 不生成输出文件
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "node"
    ],
    "removeComments": false
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "packages/**/*.ts",
    "scripts/*.ts",
    "scripts/*.ts",
    "web-ui/vite.config.ts",
    "scripts/build-charts.ts",
    "scripts/build-cli.ts",
    "bin/*.ts",
    "src/*.ts"
    // "lib/*.ts",
    // "lib/src/*.ts"
  ]
}
