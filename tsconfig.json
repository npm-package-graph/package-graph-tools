{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "target": "ESNext",
    "module": "CommonJS",
    "sourceMap": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "declaration": true,
    "declarationDir": "lib",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": false,
    "noEmit": false // 不生成输出文件
  },
  "include": [
    "packages/**/*.ts",
    "scripts/*.ts",
    "scripts/*.ts",
    "web-ui/vite.config.ts",
    "scripts/build-charts.ts",
    "scripts/build-cli.ts",
    "bin/*.ts",
    "src/*.ts",
    "lib/*.ts",
    "lib/src/*.ts"
  ]
}
